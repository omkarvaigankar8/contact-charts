{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src", // Set the base URL to your source directory
    // "paths": {
    //   "@features/*": ["features/*"] // Define the paths mapping
    // }
    "types": ["@types/react-query","@types/react", "@types/react-dom","react-router-dom", "@types/react-leaflet","@types/react-redux"]
  },
  "include": [
    "src"
  ]
}
